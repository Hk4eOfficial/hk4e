				//
				"Blink_Invincible": {
					"state": "Invincible"
				},
				"Blink_DenyLockOn": {
					"state": "DenyLockOn"
				},
				"UNIQUE_Invoker_Herald_Ice_inBlink": {
					"isUnique": true,
					"onAdded": [
						// TODO: Debug
						{
							"$type": "AttachEffect",
							"effectPattern": "Eff_Monster_Sylph_Rock_RockBullet_Body"
						},
						{
							"$type": "AttachModifier",
							"modifierName": "Blink_Invincible",
							"target": "Self"
						},
						{
							"$type": "AttachModifier",
							"modifierName": "Blink_DenyLockOn",
							"target": "Self"
						},
						// 上面这两个Modifier会随着inBlink的这个Modifier一同移除
						{
							"$type": "TriggerSetVisible",
							"visible": false,
							"target": "Self"
						},
						{
							"$type": "HideUIBillBoard",
							"hide": true,
							"target": "Self"
						},
						{
							"$type": "EnableHitBoxByName",
							"hitBoxNames": ["HitBox"],
							"setEnable": false
						},
						{
							"$type": "EnablePushColliderName",
							"pushColliderNames": ["PushCollider"],
							"setEnable": false
						}
					],
					"onRemoved": [
						{
							"$type": "EnableHitBoxByName",
							"hitBoxNames": ["HitBox", "HeadBox"],
							"setEnable": true
						},
						{
							"$type": "EnablePushColliderName",
							"pushColliderNames": ["PushCollider"],
							"setEnable": true
						},
						{
							"$type": "TriggerSetVisible",
							"visible": true,
							"target": "Self"
						},
						{
							"$type": "HideUIBillBoard",
							"hide": false,
							"target": "Self"
						}
					]
				}
			}
		}
